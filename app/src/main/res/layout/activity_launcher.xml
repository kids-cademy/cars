<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.kidscademy.cars.Launcher" >

    <TextView
        style="@style/launcher.logotype"
        android:text="@string/app_caption" />

    <ImageView
        style="@style/launcher.logo"
        android:src="@drawable/app_icon_large" />

    <TextView
        android:id="@+id/launcher_text"
        style="@style/launcher.text"
        android:text="@string/app_description" />

</LinearLayout>