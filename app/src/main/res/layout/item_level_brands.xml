<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_level_brands"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_level_brands_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_description"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/shape_placeholder" />

    <TextView
        android:id="@+id/item_level_brands_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/item_level_brands_icon"
        android:layout_gravity="bottom"
        android:background="?colorPrimaryLight"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="dacia"
        android:textAllCaps="true"
        android:textColor="?textColorInverse"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/item_level_brands_check"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@id/item_level_brands_name"
        android:src="@drawable/ic_check"
        android:translationY="24dp"
        android:visibility="invisible" />

</RelativeLayout>