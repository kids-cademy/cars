<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_scores_list"
    style="@style/scores_list.item" >

    <ImageView
        android:id="@+id/item_score_image"
        style="@style/scores_list.icon"
        android:scaleType="centerCrop"
        android:src="@drawable/shape_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_score_name"
            style="@style/scores_list.name"
            android:text="TextView" />

        <TextView
            android:id="@+id/item_score_value"
            style="@style/scores_list.value"
            android:text="Small Text" />
    </LinearLayout>

</LinearLayout>