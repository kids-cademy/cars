<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/grey_300"
    android:orientation="vertical" >

    <FrameLayout style="@style/drawer.header" >

        <ImageView style="@style/drawer.logo" />

        <ImageView
            android:id="@+id/drawer_kids_cademy"
            style="@style/drawer.logo.image" />

        <TextView style="@style/drawer.logotype" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" >

            <ImageView
                android:id="@+id/drawer_settings"
                style="@style/drawer.header_icon"
                android:src="@drawable/ic_settings" />

            <ImageView
                android:id="@+id/drawer_help"
                style="@style/drawer.header_icon"
                android:src="@drawable/ic_help" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout style="@style/drawer.menu" >

        <LinearLayout
            android:id="@+id/drawer_rate"
            style="@style/drawer.item" >

            <ImageView
                style="@style/drawer.icon.tint"
                android:src="@drawable/ic_star" />

            <TextView
                style="@style/drawer.label"
                android:text="@string/drawer_rate" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_recommended"
            style="@style/drawer.item" >

            <ImageView
                style="@style/drawer.icon.tint"
                android:src="@drawable/ic_android" />

            <TextView
                style="@style/drawer.label"
                android:text="@string/drawer_recommended" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/drawer_share"
            style="@style/drawer.item" >

            <ImageView
                style="@style/drawer.icon.tint"
                android:src="@drawable/ic_share" />

            <TextView
                style="@style/drawer.label"
                android:text="@string/drawer_share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_about"
            style="@style/drawer.item" >

            <ImageView
                style="@style/drawer.icon.tint"
                android:src="@drawable/ic_info" />

            <TextView
                style="@style/drawer.label"
                android:text="@string/drawer_about" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_no_ads"
            style="@style/drawer.item" >

            <ImageView
                style="@style/drawer.icon.tint"
                android:src="@drawable/ic_block" />

            <TextView
                style="@style/drawer.label"
                android:text="@string/drawer_no_ads" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>