<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="drawer"></style>

    <style name="drawer.header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/drawer_header_padding</item>
        <item name="android:background">?colorPrimaryLight</item>
    </style>

    <style name="drawer.logo">
        <item name="android:layout_width">@dimen/drawer_logo_size</item>
        <item name="android:layout_height">@dimen/drawer_logo_size</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginBottom">@dimen/drawer_header_text_line_height</item>
        <item name="android:src">@drawable/shape_circle</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="drawer.logo.image">
        <item name="android:src">@drawable/kids_cademy_logo</item>
        <item name="android:tint">?colorPrimary</item>
    </style>

    <style name="drawer.logotype">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:text">@string/drawer_logotype</item>
        <item name="android:textColor">?textColorInverse</item>
    </style>

    <style name="drawer.header_icon">
        <item name="android:layout_width">@dimen/drawer_header_icon_size</item>
        <item name="android:layout_height">@dimen/drawer_header_icon_size</item>
        <item name="android:paddingLeft">@dimen/drawer_header_icon_margin</item>
    </style>
    
    <style name="drawer.menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/drawer_menu_top</item>
        <item name="android:orientation">vertical</item>
        <item name="android:divider">@drawable/abc_list_divider_mtrl_alpha</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="drawer.item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/drawer_item_padding</item>
    </style>

    <style name="drawer.icon">
        <item name="android:layout_width">@dimen/drawer_icon_size</item>
        <item name="android:layout_height">@dimen/drawer_icon_size</item>
        <item name="android:layout_marginRight">@dimen/drawer_icon_margin</item>
        <item name="android:contentDescription">@string/image_description</item>
    </style>

    <style name="drawer.icon.large">
        <item name="android:layout_width">@dimen/drawer_large_icon_size</item>
        <item name="android:layout_height">@dimen/drawer_large_icon_size</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="drawer.icon.tint">
        <item name="android:tint">?colorPrimary</item>
    </style>

    <style name="drawer.label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <string name="drawer_logotype">kids (dash) cademy (dot) com</string>
    <string name="drawer_settings">Settings</string>
    <string name="drawer_help">Help</string>
    <string name="drawer_rate">Rate</string>
    <string name="drawer_recommended">Recommended</string>
    <string name="drawer_share">Share</string>
    <string name="drawer_about">About</string>
    <string name="drawer_no_ads">No Ads Manifest</string>

    <dimen name="drawer_header_padding">16dp</dimen>
    <dimen name="drawer_header_text_line_height">30dp</dimen>
    <dimen name="drawer_header_icon_size">48dp</dimen>
    <dimen name="drawer_header_icon_margin">16dp</dimen>
    <dimen name="drawer_logo_size">80dp</dimen>
    <dimen name="drawer_menu_top">30dp</dimen>
    <dimen name="drawer_list_margin">60dp</dimen>
    <dimen name="drawer_item_padding">12dp</dimen>
    <dimen name="drawer_icon_size">28dp</dimen>
    <dimen name="drawer_large_icon_size">32dp</dimen>
    <dimen name="drawer_icon_margin">20dp</dimen>

</resources>