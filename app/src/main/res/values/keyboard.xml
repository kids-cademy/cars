<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="NumericKeyboardView">
        <attr name="attachedFieldId" format="integer" />
    </declare-styleable>
    <style name="keyboard"></style>

    <style name="keyboard.key">
        <item name="android:layout_margin">2dp</item>
        <item name="layout_columnWeight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="keyboard.key.numeric">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">38dp</item>
    </style>

    <style name="keyboard.action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_gravity">center</item>
    </style>

</resources>